{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.nom }}{% endblock %}

{% block body %}
    <a href=javascript:history.go(-1)><input type="button" class="btn btn-info ml-4 mt-5" value="← Retour"></a>
<div class="container mt-4">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="border-bottom text-center card-header">
                    <img src="{{ asset('images/users/'~user.image) }}" alt="Image utilisateur" class="rounded-circle text-center" width="140px" height="140px">
                    <h4>{{ user.nom }}</h4>
                    <span class="text-muted d-block mb-2">
                        {% for role in user.roles %}
                            {{ role }}
                        {% endfor %}
                    </span>
                </div>
            </div>

        </div>
        <div class="col-9">
            <div class="card">
                <div class="border-bottom card-header">
                    <h6>Détail du profil</h6>
                </div>
                <div class="body">
                    <div class="text-left">
                        <p class="text-muted">
                            <strong>Pseudo</strong>
                            <span class="ml-2">{{ user.username }}</span>
                        </p>
                        <p class="text-muted">
                            <strong> Prénom :</strong>
                            <span class="ml-2">{{ user.prenom }}</span>
                        </p>
                        <p class="text-muted">
                            <strong>Email :</strong>
                            <span class="ml-2">{{ user.email }}</span>
                        </p>
                        <p class="text-muted">
                            <strong>Télephone :</strong>
                            <span class="ml-2">
                                {% if user.telephone == null %}
                                    numéro non renseigner
                                {% else %}
                                    {{ user.telephone }}
                                {% endif %}
                            </span>
                        </p>
                        <p class="text-muted">
                            <strong>Mot de passe:</strong>
                            <span class="ml-2">{{ password }}</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

