{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('successDep') %}
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
    <a href=javascript:history.go(-1)><input type="button" class="btn btn-info ml-4 mt-5" value="← Retour"></a>
    <div class="container">
        <table class="table table-hover mt-5">
            <thead>
            <tr>
                <th scope="col">Dépense</th>
                <th scope="col">Date</th>
                <th scope="col">Prix</th>
            </tr>
            </thead>
            <tbody>
            <tr class="table-secondary">
                <th scope="row">
                    {% for nom in depenses.libelle %}
                        {{ nom }}
                    {% endfor %}
                </th>
                <td>{{ depenses.date | date("d/m/Y") }}</td>
                <td>{{ depenses.prix }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
