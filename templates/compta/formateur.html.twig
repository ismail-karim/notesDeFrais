{% extends 'inc/sidebar.html.twig' %}
{% block containtPage %}
    <div class="container">
        {% for user in users %}
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    {% if user.image == null %}
                        <img src="{{ asset('images/imgUser.png') }}" alt="Image" class="rounded-circle" width="150">
                    {% else %}
                        <img src="{{ asset('images/users/'~user.image) }}" alt="Image" class="rounded-circle" width="150">
                    {% endif %}
                    <div class="mt-3">
                        <h4>{{ user.nom}} {{ user.prenom }}</h4>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
