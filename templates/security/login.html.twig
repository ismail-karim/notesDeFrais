{% extends 'base.html.twig' %}

{% block title %} Se connecter {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="container-sm mt-5" id="container">
        <div class="card">
            <div class="card-header">
                <h5>Se connecter</h5>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('login') }}">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="username" name="_username" placeholder="exemple@eni.fr">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe">
                    </div>
                    <input type="checkbox" id="remember_me" name="_remember_me"/>
                    <label for="remember_me">Se souvenir de moi</label>
                    <div class="form-group row">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" name="login" class="btn btn-success btn-brand btn-block">Login</button>
                        <a href="#" class="form-sublink mr-auto">Mot de passe oubli√©?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

